# Search Service Environment Variables
PYTHONPATH=/app

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/video_retrieval

# Redis
REDIS_URL=redis://localhost:6379

# Paths
MODEL_PATH=./models
DATA_PATH=./data
FAISS_INDEX_PATH=./data/embeddings

# Search Configuration
DEFAULT_TOP_K=10
MAX_TOP_K=100
SIMILARITY_THRESHOLD=0.3

# ML Models
TEXT_ENCODER_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# FAISS Configuration
FAISS_INDEX_TYPE=flat
FAISS_NPROBE=32

# Performance
ENABLE_GPU=false
BATCH_SIZE=32
CACHE_TTL=3600
