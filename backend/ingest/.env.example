# Ingestion Service Environment Variables
PYTHONPATH=/app

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/video_retrieval

# Redis
REDIS_URL=redis://localhost:6379

# Paths
MODEL_PATH=./models
DATA_PATH=./data

# Video Processing
MAX_VIDEO_SIZE=100MB
SUPPORTED_FORMATS=mp4,avi,mov,mkv
SHOT_DETECTION_THRESHOLD=0.5
MAX_KEYFRAMES_PER_SHOT=3

# ML Models
CLIP_MODEL=openai/clip-vit-base-patch32
TEXT_ENCODER_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Storage
USE_S3=false
S3_BUCKET=video-retrieval-data
AWS_REGION=us-west-2
